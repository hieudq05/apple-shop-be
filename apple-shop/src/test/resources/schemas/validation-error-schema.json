{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": ["success", "error"],
    "properties": {
        "success": { "type": "boolean", "const": false },
        "error": {
            "type": "object",
            "required": ["code", "message", "errors"],
            "properties": {
                "code": { "type": "string" },
                "message": { "type": "string" },
                "errors": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "required": ["field", "message"],
                        "properties": {
                            "field": { "type": "string" },
                            "message": { "type": "string" }
                        },
                        "additionalProperties": true
                    }
                }
            },
            "additionalProperties": true
        }
    },
    "additionalProperties": true
}
